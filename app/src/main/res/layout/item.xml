<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/grid_item_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/grid_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/itemDetailName"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/grid_item_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/itemDetailUsername"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/grid_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10sp"
        android:text="@string/itemDetailPrice"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/grid_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/itemDetailDescription"
        android:visibility="gone" />

    <TextView
        android:id="@+id/grid_item_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible" />
</LinearLayout>